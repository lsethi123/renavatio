<div class="form_horizontal">
	<% if flash[:alert] %>
		<p class="text-error"><%= flash[:alert] %></p>
	<% end %>

	<%= form_tag ('/auth') do %>
		<legend>Please Log In</legend>
		<div class="form-group">
			<%= label_tag :email, 'Name:', :class => "control-label", :for => "inputEmail" %>
			<div class="col-lg-5 col-md-6">
				<%= text_field_tag :email, params[:email], :id => "inputEmail", :placeHolder => "Email", :class => "form-control" %>
			</div>
		</div>
		<div class="form-group">
			<%= label_tag :password, 'Name:', :class => "control-label", :for => "inputPassword" %>
			<div class="col-lg-5 col-md-6">
				<%= password_field_tag :password, params[:password], :id => "inputPassword", :placeHolder => "Password", :class => "form-control" %>
			</div>
		</div>
		<div>
			<%= submit_tag "Login", :class => "btn btn-primary" %>
		</div>
	<% end %>
</div>
